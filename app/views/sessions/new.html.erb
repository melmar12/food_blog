<div class="col-md-12">
	<%= form_for(:session, role: 'form', url: login_path) do |f| %>
    <div class="modal-dialog" style="margin-bottom:20">
        <div class="modal-content">
                    <div class="panel-heading">
                        <h3 class="panel-title">Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form">
                            <fieldset>
                                <div class="form-group">
                                	<%= f.label :email %>
                                	<%= f.email_field :email, placeholder: 'enter email', autofocus: true, class: 'form-control' %>
                                    
                                </div>
                                <div class="form-group">
                                	<%= f.label :password %>
                                	<%= f.password_field :password, placeholder: 'enter email', autocomplete: 'off', class: 'form-control' %>
                                    
                                </div>
                                
                                
                                <%= f.submit "Log in", class: "btn btn-primary" %>
                            </fieldset>
                        </form>
                        <% end %>
                    </div>
                </div>
    </div>
</div>
